= form.text_field :title, :id => (@gallery.new_record?? 'slugify' : nil)
= form.text_field :identifier, :id => 'slug'
= form.text_area  :description, :data => {'cms-rich-text'=> 'true'}
= form.text_area  :short_description

= form.text_field :full_width
= form.text_field :full_height

= form.form_group :force_ratio_full do
  = form.check_box :force_ratio_full, :label => "Force Ratio"

= form.text_field :thumb_width
= form.text_field :thumb_height

= form.form_group :force_ratio_thumb do
  = form.check_box :force_ratio_thumb, :label => "Force Ratio"

= render 'comfy/admin/cms/categories/form', :form => form

= form.form_group :class => 'form-actions' do
  = form.submit t(@gallery.new_record?? '.create' : '.update'), :class => 'btn btn-primary'
  = link_to t('.cancel'), comfy_admin_cms_gallery_galleries_path, :class => 'btn btn-link'