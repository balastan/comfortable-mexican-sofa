= form.text_field :title
- if @photo.image? && @photo.id.present?
  = form.form_group 'Current Image' do
    .file-image
      = image_tag(@photo.image.url(:thumb))
- else
  = form.file_field :image, :multiple => true
= form.text_area :description, :data => {'cms-rich-text'=> 'true'}
= form.text_area :embed_code, :class => 'short'

= form.form_group :class => 'form-actions' do
  = form.submit t(@photo.new_record?? '.create' : '.update'), :class => 'btn btn-primary'
  = link_to t('.cancel'), comfy_admin_cms_gallery_gallery_photos_path(@gallery), :class => 'btn btn-link'
